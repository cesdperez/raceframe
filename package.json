		"@tailwindcss/vite": "^4.1.18",
		"@types/geojson": "^7946.0.16",
		"@types/leaflet": "^1.9.21",
		"@types/node": "^25.0.2",
		"@types/pngjs": "^6.0.5",
		"@types/sharp": "^0.32.0",
		"happy-dom": "^20.0.11",
		"jsdom": "^27.3.0",
		"pixelmatch": "^7.1.0",
		"pngjs": "^7.0.0",
		"sharp": "^0.34.5",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.4",
